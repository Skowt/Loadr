{

  "name": "Loadr",
  "description": "Load set lists of your favourite bookmarks with a single click.",
  "version": "1.0.4",
  "manifest_version": 2,

  "options_page": "options.html",

  "permissions": [
    "bookmarks",
    "contextMenus",
    "storage",
    "chrome://favicon/",
    "alarms",
    "notifications"
  ],

  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Load Daily Links"
  },

  "background": {
    "scripts": ["js/background.js"]
  }

}
